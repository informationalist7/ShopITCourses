@using ShopITCourses.Models.ViewModel
@model DetailsVM
@{
    ViewData["Title"] = Model.Product.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="text-center">@Model.Product.Name</h2>
<div class="form-control">
    <form method="post">
        <div class="container backgroundWhite pt-4">
            <div class="card" style="border:1px solid #000000; ">
                <div class="card-header bg-primary text-light ml-0  container" style="border-radius: 0px;">
                    <div class="col-12 col-md-6">
                        <h1 class="text-white">@Model.Product.Name</h1>
                    </div>
                    <div class="col-12 text-md-center">
                        <h1 class="text-warning">@Model.Product.Price @WC.Currency</h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@WC.ImagePath@Model.Product.Image" width="100%" class="rounded" />
                            </div>
                            <div class="col-12 col-lg-8">
                                <div class="row pl-3">
                                    <div class="col-12">
                                        <span class="badge p-3 border text-black" style="font-size:30px; background-color:lavenderblush">@Model.Product.Category.CategoryName</span>
                                        <h3 class="text-success"></h3>

                                        <p class="text-secondary">@Html.Raw(Model.Product.Description)</p>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-dark">
                    <div class="row">
                        <div class="col-12 col-md-6 ">
                            @if (!Model.ExistsInCart)
                            {
                                <button type="submit" class="btn btn-success form-control btn-lg" style="height:50px;">Придбати</button>
@*                                 <button type="submit" asp-action="AddToCart" asp-route-id="@Model.Product.Id"
                                        class="btn btn-success form-control btn-lg" style="height:50px;">
                                    Придбати
                                </button> *@

                            }
                            else
                            {
                                <a asp-action="RemoveFromCart" asp-route-id="@Model.Product.Id" class="btn btn-warning btn-square form-control btn-lg">Видалити з кошику</a>
                            }
                        </div>
                        <div class="col-12 col-md-6 pb-1 ">
                            <a class="btn btn-info btn-square form-control btn-lg" style="height:50px;" asp-action="Index">Назад до списку</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>